    <authorEmail>victoradeyomoye@yahoo.co.uk</authorEmail>
    <authorUrl>www.twitter.com/victoradeyomoye</authorUrl>
    <description>
		
	</description>
    <files>
        <filename plugin="paystack">paystack.php</filename>
        <filename>paystack_end.php</filename>
        <filename>index.html</filename>
    </files>
    
    <media folder="media" destination="com_hikashop/images/payment">
        <filename>Paystack.png</filename>
    </media>
    
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
    
</extension>
